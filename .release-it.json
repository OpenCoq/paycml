{
  "verbose": true,
  "git": {
    "commitMessage": "chore(release): v${version}",
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true
  },
  "npm": {
    "skipChecks": true,
    "tag": "payload-1"
  },
  "hooks": {
    "before:init": ["yarn", "yarn clean"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
